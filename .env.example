# =================================
# FastAPI Template 环境配置示例
# =================================
# 复制此文件为 .env 并根据需要修改配置

# 环境配置 (development | testing | production)
ENVIRONMENT=development

# 数据库配置
# SQLite (开发环境)
DATABASE_URL=sqlite+aiosqlite:///./app.db
# PostgreSQL (生产环境)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/dbname
# MySQL (生产环境)
# DATABASE_URL=mysql+aiomysql://user:password@localhost:3306/dbname

# JWT 配置（生产环境务必修改）
# 可使用以下命令生成随机密钥: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production
REFRESH_SECRET_KEY=your-refresh-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# 应用配置
APP_NAME=FastAPI-Template
DEBUG=true

# CORS 配置（多个来源用逗号分隔）
# 开发环境
ALLOWED_ORIGINS=["*"]
# 生产环境示例
# ALLOWED_ORIGINS=["https://yourdomain.com", "https://api.yourdomain.com"]

# 服务器配置
HOST=0.0.0.0
PORT=8000
